/* vidoe
 */
 .video_wrap{
   display: flex;
   flex-wrap: wrap;
   padding: 5rpx;
   justify-content: space-around;
 }
 .video_item{
   width: 48%;
   margin-bottom: 20rpx;
 }
 .video_img{
position: relative;
 }
 .video_img image{
width: 100%;
border-radius: 15rpx;
 }
 .video_img .video_info{
   position: absolute;
   bottom: 16rpx;
   left: 0;
   width: 100%;
   display: flex;
   justify-content:space-between;
   padding: 0 16rpx;
  font-size: 24rpx;
   color: #fff;
 }
 .video_title{
   font-size: 28rpx;
   display: -webkit-box;
   overflow: hidden;
   white-space: normal;
   text-overflow: ellipsis;
   word-wrap: break-word;
   -webkit-line-clamp: 2;
    -webkit-box-orient:vertical;
 }